# Application Configuration
ENV=development
PROJECT_NAME="AI Fintech Services"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Service Ports
UPLOAD_SERVICE_PORT=8000
CLASSIFIER_SERVICE_PORT=8001

# OpenAI GPT Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.3

# Database
DATABASE_URL=postgresql://user:password@localhost/fintech_db

# AWS S3 Configuration (Optional - for AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=fintech-data-bucket
AWS_REGION=us-east-1

# MinIO/S3 Settings (Required for CSV Management)
MINIO_ENDPOINT=YOUR_MINIO_ENDPOINT
MINIO_ACCESS_KEY=YOUR_MINIO_ACCESS_KEY  # Replace with service account key in production
MINIO_SECRET_KEY=YOUR_MINIO_SECRET_KEY  # Replace with service account secret in production
MINIO_BUCKET=csv
MINIO_REGION=us-east-1
MINIO_SECURE=true
VERIFY_SSL=false  # Set to false for self-signed certificates (dev only)

# CSV Processing Settings
CSV_STATUS_AUTO_CLEAR=true
CSV_STATUS_CLEAR_DELAY=2  # seconds
PRESIGNED_URL_EXPIRY=900  # 15 minutes

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication Settings (for CSV Management)
AUTH_ENABLED=false  # Set to true in production
JWT_SECRET_KEY=your-secret-key-for-jwt-signing  # Required if AUTH_ENABLED=true
JWT_ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO

# Monitoring (Production)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d