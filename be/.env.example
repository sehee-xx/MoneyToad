# =========================
# Database (데이터베이스)
# =========================
# DB 연결을 위한 JDBC URL입니다.
# 형식: jdbc:mysql://<호스트>:<포트>/<데이터베이스명>?<연결 옵션>
DB_URL=jdbc:mysql://<데이터베이스_서버_주소>:<포트>/<데이터베이스_이름>?serverTimezone=Asia/Seoul&useUnicode=true&characterEncoding=utf8

# 데이터베이스에 연결할 사용자 이름입니다.
DB_USERNAME=<데이터베이스_사용자명>

# 해당 사용자의 비밀번호입니다.
DB_PASSWORD=<데이터베이스_비밀번호>

# 다른 도구나 라이브러리에서 사용할 수 있는 DB 연결 URL 형식입니다.
MYSQL_DB_URL=mysql://<데이터베이스_서버_주소>:<포트>/<데이터베이스_이름>?serverTimezone=Asia/Seoul&useUnicode=true&characterEncoding=utf8

# =========================
# Redis (레디스)
# =========================
# Redis 서버의 호스트 주소(IP 또는 도메인)입니다.
REDIS_HOST=<레디스_서버_주소>

# Redis 서버의 포트 번호입니다. (기본값: 6379)
REDIS_PORT=<레디스_서버_포트>

# =========================
# OAuth2 (SSAFY - 소셜 로그인 설정 예시)
# =========================
# OAuth2 제공자(SSAFY)로부터 발급받은 클라이언트 ID입니다.
SSAFY_CLIENT_ID=<발급받은_클라이언트_ID>

# OAuth2 제공자로부터 발급받은 클라이언트 시크릿 키입니다. (외부에 노출되면 안 됩니다)
SSAFY_CLIENT_SECRET=<발급받은_클라이언트_시크릿>

# 클라이언트의 이름(별칭)입니다.
SSAFY_CLIENT_NAME=SSAFY

# OAuth2 인증 방식입니다. 'authorization_code'는 표준적인 방식입니다.
SSAFY_AUTH_GRANT_TYPE=authorization_code

# 인증 성공 후 리디렉션될 URI입니다. {baseUrl}, {registrationId}는 프레임워크가 동적으로 채워줍니다.
SSAFY_REDIRECT_URI={baseUrl}/login/oauth2/code/{registrationId}

# 애플리케이션이 요청할 권한 범위입니다. (예: email profile)
SSAFY_SCOPES=

# 클라이언트 인증 방식입니다.
SSAFY_CLIENT_AUTH_METHOD=client_secret_post

# OAuth2 제공자의 인증 페이지 주소입니다.
SSAFY_AUTH_URI=<인증_서버_URI>

# 액세스 토큰을 발급받는 주소입니다.
SSAFY_TOKEN_URI=<토큰_발급_URI>

# 사용자 정보를 조회하는 주소입니다.
SSAFY_USER_INFO_URI=<사용자_정보_조회_URI>

# 사용자 정보 응답에서 사용자 이름을 가져올 속성(필드) 이름입니다.
SSAFY_USER_NAME_ATTR=name

# =========================
# JWT (JSON Web Token)
# =========================
# JWT를 서명하고 검증하는 데 사용할 비밀 키입니다. (아주 길고 복잡한 임의의 문자열을 사용해야 합니다)
JWT_SECRET=<JWT_서명에_사용할_매우_긴_비밀키>

# 액세스 토큰의 유효 기간(초 단위)입니다. (예: 3600 = 1시간)
JWT_ACCESS_SECONDS=1209600

# 리프레시 토큰의 유효 기간(초 단위)입니다. (액세스 토큰보다 길게 설정합니다)
JWT_REFRESH_SECONDS=1209600

# 토큰 발급자를 나타내는 문자열입니다. (보통 서비스 도메인이나 이름을 사용합니다)
JWT_ISSUER=<토큰_발급자_이름>

# =========================
# JPA (Java Persistence API)
# =========================
# 애플리케이션 실행 시 JPA(Hibernate)가 데이터베이스 스키마를 다루는 방식을 설정합니다.
# - update: 엔티티 변경 사항을 감지하여 스키마를 자동으로 수정합니다. (개발 시 유용)
# - validate: 엔티티와 테이블이 일치하는지 검증만 합니다.
# - create: 실행 시마다 기존 스키마를 삭제하고 새로 생성합니다.
# - create-drop: 실행 시 스키마를 생성하고 종료 시 삭제합니다.
# - none: 아무 작업도 하지 않습니다. (운영 환경 권장)
JPA_DDL_AUTO=update